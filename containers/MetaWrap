FROM ubuntu:18.04

ARG MINICONDA_VERSION="latest"

ENV PATH /opt/conda/bin:$PATH

RUN apt-get update && apt-get install -y wget git curl build-essential

# Anaconda
RUN wget --quiet https://repo.anaconda.com/miniconda/Miniconda2-${MINICONDA_VERSION}-Linux-x86_64.sh -O ~/miniconda.sh && \
    /bin/bash ~/miniconda.sh -b -p /opt/conda && \
    rm ~/miniconda.sh && \
    ln -s /opt/conda/etc/profile.d/conda.sh /etc/profile.d/conda.sh && \
    echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc && \
    echo "conda activate base" >> ~/.bashrc

RUN conda install -c conda-forge -c bioconda -c ursky --yes metawrap-mg


