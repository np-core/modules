ARG IMAGE=nvidia/cuda:9.0-cudnn7-devel-ubuntu16.04

FROM $IMAGE

ARG GUPPY_VERSION=3.6.0
ARG MINICONDA_VERSION=latest
ARG MEGALODON_VERSION=2.1.0

ENV PATH /opt/conda/bin:/rust/.cargo/bin:/ont-guppy/bin:$PATH
ENV CARGO_HOME=/rust/.cargo
ENV RUSTUP_HOME=/rust/.rustup

RUN apt-get update && apt-get install -y wget lsb-release && \
    PLATFORM=$(lsb_release -cs) && \
    wget -O- https://mirror.oxfordnanoportal.com/apt/ont-repo.pub | apt-key add - && \
    echo "deb http://mirror.oxfordnanoportal.com/apt ${PLATFORM}-stable non-free" | tee /etc/apt/sources.list.d/nanoporetech.sources.list && \
    apt-get update

RUN wget https://mirror.oxfordnanoportal.com/software/analysis/ont-guppy_${GUPPY_VERSION}_linux64.tar.gz && tar -xf ont-guppy_${GUPPY_VERSION}_linux64.tar.gz

# LSD2 compiler
RUN apt-get install g++ git make --yes \
    && mkdir /src \
    && cd /src \
    && git clone https://github.com/tothuhien/lsd2.git --branch v1.4 \
    && cd /src/lsd2/src \
    && make \
    && ln -s /src/lsd2/src/lsd2 /bin/lsd2

# Anaconda
RUN wget --quiet https://repo.anaconda.com/miniconda/Miniconda3-${MINICONDA_VERSION}-Linux-x86_64.sh -O ~/miniconda.sh && \
    /bin/bash ~/miniconda.sh -b -p /opt/conda && \
    rm ~/miniconda.sh && \
    ln -s /opt/conda/etc/profile.d/conda.sh /etc/profile.d/conda.sh && \
    echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc && \
    echo "conda activate base" >> ~/.bashrc

RUN conda install -c conda-forge -c bioconda -c genomedk --yes --no-update-deps \
 raxml-ng=0.9.0 gubbins=2.4.1 qcat snippy=4.6.0 goalign fasttree treetime pysam fastp python=3.7

# NanoPath
RUN mkdir /nanopath && git clone https://github.com/np-core/nanopath /nanopath && pip install /nanopath

# Currently update necessary
RUN pip install megalodon==$MEGALODON_VERSION

# Nanoq separate because of GLIBC incompatibility for some reason
RUN apt-get update && apt-get install curl -y
RUN mkdir /rust && curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y
RUN cargo install nanoq


